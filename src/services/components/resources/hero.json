{
  "name": "Hero",
  "data": {
    "title": "Sample Title",
    "text": "Sample Text",
    "placeholder": "Hledat",
    "displaySearch": false,
    "displayOverlay": false,
    "overlayColor": "black",
    "overlayOpacity": 0.35,
    "TitleColor": "blue",
    "textColor": "gray",
    "image": {},
    "imageSize": "contain",
    "doctorSearchResults": [{ "name": "", "speciality": "", "clinic": "", "active": false }],
    "blogSearchResults": [{ "title": "", "perex": "", "image": {} }],
    "secondColumn": false,
    "secondColumnBackground": "#00aad0",
    "title2": "Sample Title",
    "title2color": "Sample Title",
    "text2": "#fff",
    "text2color": "#3c3c3b",
    "button": false,
    "buttonBackground": "",
    "buttonBorder": "",
    "buttonUrl": "",
    "buttonText": "Více informací"
  },
  "form": {
    "schema": {
      "type": "object",

      "properties": {
        "displayOverlay": {
          "type": "boolean",
          "title": "Display Overlay?"
        },
        "overlayColor": {
          "type": "text",
          "title": "Overlay color (e.g. black, #00FF00 etc.)"
        },
        "overlayOpacity": {
          "type": "number",
          "title": "Overlay opacity (0 - 1; e.g. 0.35)"
        },
        "title": {
          "type": "text",
          "title": "Title"
        },
        "titleColor": {
          "type": "enum",
          "title": "Title Color",
          "options": {
            "blue": "blue",
            "white": "white"
          }
        },
        "text": {
          "type": "text",
          "title": "Text"
        },
        "textColor": {
          "type": "enum",
          "title": "Text Color",
          "options": {
            "gray": "gray",
            "white": "white"
          }
        },
        "placeholder": {
          "type": "text",
          "title": "placeholder"
        },
        "displaySearch": {
          "type": "boolean",
          "title": "Display Search Bar?"
        },
        "image": {
          "type": "image"
        },
        "imageSize": {
          "type": "string",
          "title": "Image fit (auto, cover, contain, percentage; contain = full img)"
        },
        "doctorsLink": {
          "type": "urlAutocomplete",
          "title": "Doctor Search Results link url"
        },
        "blogSearchResults": {
          "type": "array",
          "title": "Pages",
          "items": {
            "properties": {
              "title": {
                "type": "text",
                "title": "Blog result title "
              },
              "perex": {
                "type": "text",
                "title": "Blog results perex"
              },
              "image": {
                "type": "image"
              },
              "link": {
                "type": "urlAutocomplete",
                "title": "Link URL"
              }
            }
          }
        },
        "secondColumn": {
          "type": "boolean",
          "title": "Display second column?"
        },
        "secondColumnBackground": {
          "type": "text",
          "title": "Column 2 background color (e.g. #3c3c3b, #2473ba, #00aad0)"
        },
        "title2": {
          "type": "text",
          "title": "Title 2"
        },
        "title2color": {
          "type": "text",
          "title": "Title 2 color (e.g. black, #2473ba, #00aad0)"
        },
        "text2": {
          "type": "text",
          "title": "Text 2"
        },
        "text2color": {
          "type": "text",
          "title": "Text 2 color (e.g. white, #FFFFFF)"
        },
        "button": {
          "type": "boolean",
          "title": "Show button?"
        },
        "buttonBackground": {
          "type": "enum",
          "title": "Button Background Color",
          "options": {
            "": "None",
            "btn--blueBkg ": "blue",
            "btn--greyBkg ": "gray"
          }
        },
        "buttonBorder": {
          "type": "enum",
          "title": "Button Border Color",
          "options": {
            "": "None",
            "btn--whiteBorder": "white",
            "btn--blueBorder": "blue",
            "btn--blackBorder": "black"
          }
        },
        "buttonUrl": {
          "type": "urlAutocomplete",
          "title": "Button URL"
        },
        "buttonText": {
          "type": "text",
          "title": "Button Text"
        }
      }
    }
  }
}
