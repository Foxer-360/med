              },
              "buttonLink": {
                "type": "urlAutocomplete",
                "title": "Button link"
              },
              "buttonStyle": {
                "type": "enum",
                "title": "type of button",
                "options": {
                  "btn--blueBorder": "blueBorder",
                  "btn--blueBkg": "blueBackground",
                  "btn--blackBorder": "blackBorder"
